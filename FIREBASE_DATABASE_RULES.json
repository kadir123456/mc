{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        "credits": {
          ".validate": "newData.isNumber() && newData.val() >= 0"
        },
        "email": {
          ".validate": "newData.isString()"
        },
        "isBanned": {
          ".write": false
        }
      }
    },
    "matches": {
      ".read": true,
      ".write": false
    },
    "coupons": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "popular_coupons": {
      ".read": true,
      ".write": false
    },
    "admin": {
      ".read": false,
      ".write": false
    }
  }
}
