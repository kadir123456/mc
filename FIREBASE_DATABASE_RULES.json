{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        "credits": {
          ".validate": "newData.isNumber() && newData.val() >= 0"
        },
        "email": {
          ".validate": "newData.isString()"
        },
        "isBanned": {
          ".write": false
        }
      }
    },
    "matches": {
      ".read": true,
      ".write": false
    },
    "coupons": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        "$couponId": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        }
      }
    },
    "payment_requests": {
      "$requestId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "admins": {
      ".read": "auth != null",
      ".write": false
    },
    "transactions": {
      "$transactionId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "banned_ips": {
      ".read": false,
      ".write": false
    },
    "popular_coupons": {
      ".read": true,
      ".write": false
    },
    "ip_registrations": {
      ".read": false,
      ".write": "auth != null"
    }
  }
}
